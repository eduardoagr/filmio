<Page
    x:Class="filmio.View.Pages.CreateMeetingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:filmio.View.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="CreateMeetingPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button
            Margin="10,0,0,0"
            Background="Transparent"
            Command="{Binding GoBackCommand}"
            FocusVisualStyle="{x:Null}"
            Visibility="{Binding canGoBack}">
            <iconPacks:PackIconControl
                Foreground="Red"
                Kind="{x:Static iconPacks:PackIconBoxIconsKind.RegularArrowBack}" />

        </Button>

        <StackPanel
            Grid.Row="1"
            Margin="20">

            <TextBox ui:ControlHelper.PlaceholderText="Meeting name" />
            <TextBlock
                Margin="10,10,0,0"
                Text="Invite people: " />
        </StackPanel>
    </Grid>
</Page>

